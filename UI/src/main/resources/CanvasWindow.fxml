<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.test.UIControllers.CanvasWindowController"
            onKeyPressed="#onKeyPressed" onKeyReleased="#onKeyReleased">
    <content>
        <Canvas fx:id="canvas" onMousePressed="#onMousePressed"
                onMouseReleased="#onMouseReleased" onMouseDragged="#onMouseDragged"/>
    </content>
    <contextMenu>
        <ContextMenu fx:id="canvasContextMenu"/>
    </contextMenu>
</ScrollPane>
